<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView android:id="@+id/imageview_item_image"
            android:layout_width="64dp"
            android:layout_height="64dp"
            ></ImageView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"></TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/textView_item_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" ></TextView>
                <TextView
                    android:id="@+id/textView_item_publisher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" ></TextView>

                <TextView
                    android:id="@+id/textView_item_pubDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"></TextView>
            </LinearLayout>
            <TextView
                android:id="@+id/textView_item_translator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" ></TextView>
            <TextView
                android:id="@+id/textView_item_isbn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" ></TextView>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>