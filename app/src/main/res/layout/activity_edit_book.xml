<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/backg3"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/edit_book_image"
            android:layout_width="139dp"
            android:layout_height="192dp"
            android:src="@drawable/book_no_name"></ImageView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Title:"
                    tools:layout_editor_absoluteX="97dp"
                    tools:layout_editor_absoluteY="225dp" />

                <EditText
                    android:id="@+id/edittext_shop_item_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text=""
                    tools:layout_editor_absoluteX="165dp"
                    tools:layout_editor_absoluteY="217dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewAuthor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Author:"
                    tools:layout_editor_absoluteX="97dp"
                    tools:layout_editor_absoluteY="225dp" />

                <EditText
                    android:id="@+id/edittext_shop_item_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text=""
                    tools:ignore="TouchTargetSizeCheck"
                    tools:layout_editor_absoluteX="165dp"
                    tools:layout_editor_absoluteY="217dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewTranslator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Translator:"
                    tools:layout_editor_absoluteX="97dp"
                    tools:layout_editor_absoluteY="225dp" />

                <EditText
                    android:id="@+id/edittext_shop_item_translator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text=""
                    tools:ignore="TouchTargetSizeCheck"
                    tools:layout_editor_absoluteX="165dp"
                    tools:layout_editor_absoluteY="217dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewPublisher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Publisher:"
                    tools:layout_editor_absoluteX="97dp"
                    tools:layout_editor_absoluteY="225dp" />

                <EditText
                    android:id="@+id/edittext_shop_item_publisher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text=""
                    tools:ignore="TouchTargetSizeCheck"
                    tools:layout_editor_absoluteX="165dp"
                    tools:layout_editor_absoluteY="217dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewPubDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PubDate:"
                    tools:layout_editor_absoluteX="97dp"
                    tools:layout_editor_absoluteY="225dp" />

                <EditText
                    android:id="@+id/edittext_shop_item_pub_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text=""
                    tools:ignore="TouchTargetSizeCheck"
                    tools:layout_editor_absoluteX="165dp"
                    tools:layout_editor_absoluteY="217dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewIsbn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ISBN:"
                    tools:layout_editor_absoluteX="97dp"
                    tools:layout_editor_absoluteY="225dp" />

                <EditText
                    android:id="@+id/edittext_shop_item_isbn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text=""
                    tools:ignore="TouchTargetSizeCheck"
                    tools:layout_editor_absoluteX="165dp"
                    tools:layout_editor_absoluteY="217dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_ok"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="100dp"
                    android:text="Save"></Button>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/edit_book_details"
        style="?android:listSeparatorTextViewStyle"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:scaleType="center"
            android:contentDescription="@string/edit_book_status"
            android:src="@drawable/icon_edit_reading"/>
        <Spinner
            android:id="@+id/reading_status_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:spinnerMode="dropdown"
            android:entries="@array/spinner_edit_status"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:scaleType="center"
            android:contentDescription="@string/edit_bookshelf"
            android:src="@drawable/icon_edit_bookshelf"/>
        <Spinner
            android:id="@+id/book_shelf_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:spinnerMode="dropdown"
            android:entries="@array/spinner_edit_bookshelf"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="8dp"
            android:scaleType="center"
            android:contentDescription="@string/edit_book_note"
            android:src="@drawable/icon_edit_note"/>
        <EditText
            android:id="@+id/book_notes_exit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textSize="18sp"
            android:hint="@string/note_edit_text_hint"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:scaleType="center"
            android:contentDescription="@string/edit_book_label"
            android:src="@drawable/icon_edit_label"/>

        <Spinner
            android:id="@+id/label_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:spinnerMode="dropdown"
            android:entries="@array/spinner_edit_bookLabel"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="8dp"
            android:scaleType="center"
            android:contentDescription="@string/edit_book_netlink"
            android:src="@drawable/icon_edit_netlink"/>
        <EditText
            android:id="@+id/book_website_exit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textSize="18sp"
            android:hint="@string/edit_book_netlink_hint"/>
    </LinearLayout>
</LinearLayout>
